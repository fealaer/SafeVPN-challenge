  "description": "SafeVPN Challenge task",
  "main": "server.js",
  "engines": {
    "npm": ">=3",
    "node": ">=6"
  },
  "scripts": {
    "start": "NODE_ENV=production node server.js",
    "test": "echo \"Error: no test specified\" && exit 1",
