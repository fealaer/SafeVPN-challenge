{
  "name": "safevpn-challenge",
  "version": "0.0.1",
  "description": "SafeVPN Challenge task",
  "main": "server",
  "engines": {
    "npm": ">=3",
    "node": ">=6"
  },
  "scripts": {
    "start": "npx cross-env NODE_ENV=production npx forever start server",
    "stop": "npx forever stop server",
    "logs": "npx forever logs server",
    "start:dev": "npx concurrently \"npm run test:watch\" \"npm run lint:watch\" \"npx nodemon\"",
    "lint": "npx eslint --ignore-path .gitignore .",
    "lint:watch": "npx esw --watch --changed --quiet --ignore-path .gitignore .",
    "check-circular-dependencies": "npx madge --circular server",
    "precommit": "npm run test",
    "pretest": "npm run test:clean && npm run lint && npm run check-circular-dependencies",
    "test:clean": "npx rimraf ./coverage",
    "test": "npx cross-env NODE_ENV=test npx jest --coverage",
    "test:watch": "npx cross-env NODE_ENV=test npx jest --coverage --watchAll"
  },
  "eslintConfig": {
    "extends": "airbnb-base",
    "env": {
      "node": true,
      "jest": true,
      "es6": true
    },
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module"
    }
  },
  "jest": {
    "collectCoverageFrom": [
      "server/**/*.{js}",
      "!server/**/*.test.{js}",
      "!server/createDefaultData.js",
      "!server/index.js",
      "!server/server.js",
      "!server/config/**/*.js",
      "!server/models/*.js",
      "!server/middlewares/validators/*.js"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 98,
        "branches": 91,
        "functions": 98,
        "lines": 98
      }
    },
    "moduleDirectories": [
      "node_modules",
      "server"
    ],
    "setupTestFrameworkScriptFile": "<rootDir>/server/setUpConfig.js",
    "testRegex": "__tests__/.*\\.test\\.js$",
    "clearMocks": true
  },
  "dependencies": {
    "bluebird": "3.5.1",
    "config": "1.30.0",
    "cross-env": "5.1.4",
    "express": "4.16.3",
    "express-limiter": "1.6.1",
    "express-validator": "5.1.2",
    "forever": "0.15.3",
    "helmet": "3.12.0",
    "mongoose": "4.13.12",
    "morgan": "1.9.0",
    "redis": "2.8.0",
    "winston": "2.4.2"
  },
  "devDependencies": {
    "concurrently": "3.5.1",
    "coveralls": "3.0.0",
    "eslint": "4.19.1",
    "eslint-config-airbnb-base": "12.1.0",
    "eslint-plugin-import": "2.11.0",
    "eslint-watch": "3.1.4",
    "jest": "22.4.3",
    "madge": "3.0.1",
    "mockingoose": "2.9.1",
    "nodemon": "1.17.3",
    "rimraf": "2.6.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fealaer/SafeVPN-challenge.git"
  },
  "author": "fealaer",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/fealaer/SafeVPN-challenge/issues"
  },
  "homepage": "https://github.com/fealaer/SafeVPN-challenge#readme"
}
